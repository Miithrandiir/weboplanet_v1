{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/login.css') }}"/>
{% endblock %}

{% block body %}
    <main id="loginPage">
        <div class="container">
            <h2>Page de connexion</h2>

            {% if error %}
                <div class="alert danger">
                    <h2><i class="fas fa-exclamation"></i> Erreur :</h2>
                    <p>{{ error.messageKey|trans(error.messageData, 'security') }}</p>
                </div>
            {% endif %}

            <!-- <div class="alert warning">
                <h2><i class="fas fa-exclamation-triangle"></i> Infos :</h2>
                <p>Votre compte est bloqué le temps des examens</p>
            </div>

            <div class="alert success">
                <h2><i class="fas fa-thumbs-up"></i> Succès :</h2>
                <p>Votre mot de passe à été changé</p>
            </div>

             <div class="alert danger">
                <h2><i class="fas fa-exclamation"></i> Erreur :</h2>
                <p>Les identifiants fournis sont incorrectes</p>
            </div>
             -->

            <form method="POST">
                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >
                <label>
                    Identifiant:
                    <input type="text" placeholder="Identifiant"  name="username"/>
                </label>

                <label>
                    Mot de passe:
                    <input type="password" placeholder="Mot de passe" name="password"/>
                </label>

                <button>Connexion</button>
                <a href="{{ path('firstConnection') }}">Première connexion</a>
            </form>
        </div>
    </main>
{% endblock %}


{% block javascripts %}
    <script src="{{ asset('js/jquery-3.3.1.min.js') }}"></script>
    <script src="{{ asset('js/slider.js') }}"></script>
    <script src="{{ asset('js/navigation.js') }}"></script>
{% endblock %}