{% extends 'administration/base.html.twig' %}

{% block body %}
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Utilisateurs
                <small>importation</small>
            </h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Tableau de bord</a></li>
                <li><a href="#">Utilisateurs</a></li>
                <li class="active">importation</li>
            </ol>
        </section>

        <!-- Main content -->
        <section class="content">

            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">Comment utiliser l'importation ?</h3>
                </div>
                <div class="box-body">
                    <div class="callout callout-info">
                        <h4><i class="fas fa-info-circle"></i> Le fichier doit respecter le format suivant</h4>

                        <table class="table">
                            <thead>
                                <tr>
                                    <td>E</td>
                                    <td>login</td>
                                    <td>mdp</td>
                                    <td>nom</td>
                                    <td>prénom</td>
                                    <td>classe</td>
                                    <td>groupe</td>
                                    <td>E</td>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>D</td>
                                    <td>DUPONDL</td>
                                    <td>MOTDEPASSE</td>
                                    <td>DUPOND</td>
                                    <td>Louis</td>
                                    <td>Informatique</td>
                                    <td>Groupe 1</td>
                                    <td>D</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <div class="callout callout-warning">
                        <h4><i class="fas fa-exclamation-triangle"></i> Attention</h4>
                        <p>La classe doit être créer avant d'importer les utilisateurs !</p>
                    </div>

                </div>
                <div class="box-footer">

                </div>
            </div>

            <!-- Default box -->
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">Importation d'utilisateurs</h3>
                </div>
                <div class="box-body">
                    {{ form_start(form) }}

                    {% if form_errors(form) %}
                        <div class="callout callout-danger">
                            <h4>Danger :</h4>

                            <p>{{ form_errors(form) }}</p>
                        </div>
                    {% endif %}
                    <div class="box-body">
                        <div class="form-group">
                            {{ form_label(form.file) }}
                            {{ form_widget(form.file, {'attr': {'class' : ''}}) }}
                        </div>
                        <button type="submit" class="btn btn-primary">Importer !</button>
                    </div>

                    <!-- /.box-body -->
                    {{ form_end(form) }}
                </div>
                <div class="box-footer">

                </div>
            </div>

        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
{% endblock %}

{% block title %}
    Importation d'utilisateurs
{% endblock %}

