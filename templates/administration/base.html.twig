    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
</head>
<body class="hold-transition skin-blue sidebar-mini">
<div class="wrapper">

    <header class="main-header">
        <!-- Logo -->
        <a href="index2.html" class="logo">
            <!-- mini logo for sidebar mini 50x50 pixels -->
            <span class="logo-mini"><b>W</b>EB</span>
            <!-- logo for regular state and mobile devices -->
            <span class="logo-lg"><b>Webo</b>Planet</span>
        </a>
        <!-- Header Navbar: style can be found in header.less -->
        <nav class="navbar navbar-static-top">
            <!-- Sidebar toggle button-->
            <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
                <span class="sr-only">Toggle navigation</span>
            </a>

            <div class="navbar-custom-menu">
                <ul class="nav navbar-nav">
                    <li class="dropdown user user-menu">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            <img src="{{ asset('admin/dist/img/avatar5.png') }}" class="user-image" alt="User Image">
                            <span class="hidden-xs">{{ app.user.name }}</span>
                        </a>
                        <ul class="dropdown-menu">
                            <!-- User image -->
                            <li class="user-header">
                                <img src="{{ asset('admin/dist/img/avatar5.png') }}" class="img-circle" alt="User Image">

                                <p>
                                    {{ app.user.name }}
                                    <small>
                                        {% if app.user.roles[0] == "ROLE_ADMIN" %}
                                            Administrateur
                                        {% elseif app.user.roles[0] == "ROLE_ENSG" %}
                                            Enseignant
                                        {% endif %}
                                    </small>
                                </p>
                            </li>
                            <!-- Menu Footer-->
                            <li class="user-footer">
                                <div class="pull-left">
                                    <a href="{{ path('dashboard_account') }}" class="btn btn-default btn-flat">Profile</a>
                                </div>
                                <div class="pull-right">
                                    <a href="{{ path('logout') }}" class="btn btn-default btn-flat">Déconnexion</a>
                                </div>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <!-- Left side column. contains the logo and sidebar -->
    <aside class="main-sidebar">
        <!-- sidebar: style can be found in sidebar.less -->
        <section class="sidebar">
            <!-- Sidebar user panel -->
            <div class="user-panel">
                <div class="pull-left image">
                    <img src="{{ asset('admin/dist/img/avatar5.png') }}" class="img-circle" alt="User Image">
                </div>
                <div class="pull-left info">
                    <p>{{ app.user.name }}</p>
                    <a href="#"><i class="fa fa-user text-success"></i> Administrateur</a>
                </div>
            </div>
            <!-- sidebar menu: : style can be found in sidebar.less -->
            <ul class="sidebar-menu" data-widget="tree">
                <li class="header">NAVIGATION</li>

                <li><a href="{{ path('administration_index') }}"><i class="fa fa-dashboard"></i> <span>Tableau de bord</span></a></li>
                <li class="treeview">
                    <a href="#">
                        <i class="fa fa-users"></i>
                        <span>Dipômes / Sections</span>
                        <span class="pull-right-container">
                          <i class="fa fa-angle-left pull-right"></i>
                        </span>
                    </a>
                    <ul class="treeview-menu">
                        <!-- GESTION DES DIPLOMES -->
                        <li class="treeview">
                            <a href="#"><i class="fa fa-circle-o"></i> Gestion des diplômes
                                <span class="pull-right-container">
                                  <i class="fa fa-angle-left pull-right"></i>
                                </span>
                            </a>
                            <ul class="treeview-menu">
                                <li><a href="{{ path('administration_diploma_create') }}"><i class="fa fa-circle-o"></i> Créer un diplôme</a></li>
                                <li><a href="{{ path('administration_diploma_view') }}"><i class="fa fa-circle-o"></i> Afficher les diplômes</a></li>
                            </ul>
                        </li>
                        <!-- GESTION DES SECTIONS -->
                        <li class="treeview">
                            <a href="#"><i class="fa fa-circle-o"></i> Gestion des sections
                                <span class="pull-right-container">
                                  <i class="fa fa-angle-left pull-right"></i>
                                </span>
                            </a>
                            <ul class="treeview-menu">
                                <li><a href="{{ path('administration_section_create') }}"><i class="fa fa-circle-o"></i> Créer une section</a></li>
                                <li><a href="{{ path('administration_section_view') }}"><i class="fa fa-circle-o"></i> Afficher les sections</a></li>
                            </ul>
                        </li>
                        <!-- GESTION DES GROUPES -->
                        <li class="treeview">
                            <a href="#"><i class="fa fa-circle-o"></i> Gestion des groupes
                                <span class="pull-right-container">
                                  <i class="fa fa-angle-left pull-right"></i>
                                </span>
                            </a>
                            <ul class="treeview-menu">
                                <li><a href="{{ path('administration_group_create') }}"><i class="fa fa-circle-o"></i> Créer un groupe</a></li>
                                <li><a href="{{ path('administration_group_view') }}"><i class="fa fa-circle-o"></i> Afficher les groupes</a></li>
                            </ul>
                        </li>
                    </ul>
                </li>
                <!-- EVALUATIONS -->
                <li class="treeview">
                    <a href="#">
                        <i class="fas fa-radiation"></i> <span>Evaluations</span>
                        <span class="pull-right-container">
                          <i class="fa fa-angle-left pull-right"></i>
                        </span>
                    </a>
                    <ul class="treeview-menu">
                        <li class="treeview">
                            <a href="#"><i class="fa fa-circle-o"></i> Type d'évaluations
                                <span class="pull-right-container">
                                  <i class="fa fa-angle-left pull-right"></i>
                                </span>
                            </a>
                            <ul class="treeview-menu">
                                <li><a href="{{ path('administration_evaluations_type_create') }}"><i class="fa fa-circle-o"></i> Créer</a></li>
                                <li><a href="{{ path('administration_evaluations_type_view') }}"><i class="fa fa-circle-o"></i> Voir</a></li>
                            </ul>
                        </li>
                        <li><a href="{{ path('administration_evaluations_create') }}"><i class="fa fa-circle-o"></i> Créer une évaluations</a></li>
                        <li><a href="{{ path('administration_evaluations_view') }}"><i class="fa fa-circle-o"></i> Vues sur les évaluations</a></li>
                        <li><a href="#"><i class="fa fa-bar-chart"></i> Statistiques</a></li>
                    </ul>
                </li>
                <!-- COURS -->
                <li class="treeview">
                    <a href="#">
                        <i class="fas fa-book"></i> <span>Cours</span>
                        <span class="pull-right-container">
                          <i class="fa fa-angle-left pull-right"></i>
                        </span>
                    </a>
                    <ul class="treeview-menu">
                        <li><a href="{{ path('administration_course_create') }}"><i class="fa fa-circle-o"></i> Créer un cours</a></li>
                        <li><a href="{{ path('administration_course_view') }}"><i class="fa fa-circle-o"></i> Afficher les cours</a></li>
                        <li><a href="{{ path('administration_chapter_create') }}"><i class="fa fa-circle-o"></i> Créer un chapitre</a></li>
                        <li><a href="{{ path('administration_chapter_view') }}"><i class="fa fa-circle-o"></i> Afficher les chapitres</a></li>
                    </ul>
                </li>
                <!-- UTILISATEURS -->
                <li class="treeview">
                    <a href="#">
                        <i class="fas fa-user"></i>
                        <span>Utilisateurs</span>
                        <span class="pull-right-container">
                          <i class="fa fa-angle-left pull-right"></i>
                        </span>
                    </a>
                    <ul class="treeview-menu">
                        <li class="treeview">
                            <a href="#"><i class="fa fa-circle-o"></i> Ajout d'utilisateur(s)
                                <span class="pull-right-container">
                                  <i class="fa fa-angle-left pull-right"></i>
                                </span>
                            </a>
                            <ul class="treeview-menu">
                                <li><a href="{{ path('administration_user_add') }}"><i class="fa fa-circle-o"></i> Créer un utilisateur</a></li>
                                <li><a href="{{ path('administration_user_import') }}"><i class="fa fa-circle-o"></i> Importer des utilisateurs</a></li>
                            </ul>
                        </li>
                        <li><a href="{{ path('administration_users_view') }}"><i class="fa fa-circle-o"></i> Afficher les utilisateurs</a></li>
                    </ul>
                </li>
            </ul>
        </section>
        <!-- /.sidebar -->
    </aside>

    {% block body %}{% endblock %}

    <footer class="main-footer">
        <div class="pull-right hidden-xs">
            <b>Version</b> 1.0.0
        </div>
        <strong>WeboPlanet, pour l'Université du Littoral Côte d'Opale</strong>
    </footer>

</div>
<!-- ./wrapper -->

