{% extends 'administration/base.html.twig' %}

{% block title %}Création d'une évaluation{% endblock %}

{% block body %}
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Évaluation
                <small>création</small>
            </h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Tableau de bord</a></li>
                <li><a href="#">évaluation</a></li>
                <li class="active">création</li>
            </ol>
        </section>

        <!-- Main content -->
        <section class="content">

            <!-- Default box -->
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">Création d'une évaluation</h3>
                </div>
                <div class="box-body">
                    <div class="pad margin no-print">
                        <div class="callout callout-info" style="margin-bottom: 0!important;">
                            <h4><i class="fa fa-info"></i> Note:</h4>
                            Les questions seront à remplir dans la page suivante.
                        </div>
                    </div>
                    {{ form_start(form) }}
                    <div class="box-body">
                        <div class="form-group">
                            {{ form_label(form.name) }}
                            {{ form_widget(form.name, {'attr': {'class' : 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.chapter) }} <small>Champs non obligatoire</small>
                            {{ form_widget(form.chapter, {'attr': {'class' : 'form-control select2'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_widget(form.isEval, {'attr': {'class' : 'checker'}}) }}
                            {{ form_label(form.isEval) }}
                        </div>

                    </div>
                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Envoyer</button>
                    </div>
                    <!-- /.box-body -->
                    {{ form_end(form) }}

                </div>
            </div>
            <!-- /.box -->

        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
{% endblock %}

{% block stylesheets %}
    <!-- Select2 -->
    <link rel="stylesheet" href="{{ asset('admin/bower_components/select2/dist/css/select2.min.css') }}"/>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('admin/bower_components/select2/dist/js/select2.full.min.js') }}"></script>
    <script src="{{ asset('admin/plugins/input-mask/jquery.inputmask.js') }}"></script>
    <script src="{{ asset('admin/plugins/input-mask/jquery.inputmask.date.extensions.js') }}"></script>
    <script src="{{ asset('admin/plugins/input-mask/jquery.inputmask.extensions.js') }}"></script>
    <script>
        $(function (){
            //Initialize Select2 Elements
            $('.select2').select2();
        });
    </script>
{% endblock %}